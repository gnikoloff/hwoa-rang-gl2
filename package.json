{
  "name": "hwoa-rang-gl2",
  "version": "0.0.1",
  "description": "minimal WebGL2.0 library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "start:dev": "tsup ./src/index.ts --watch --dts --clean",
    "start:build": "tsup ./src/index.ts --minify --dts --clean",
    "lint": "eslint ./src"
  },
  "lint-staged": {
    "**/*": [
      "npm run lint",
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/webgl-ext": "^0.0.32",
    "gl-matrix": "^3.4.3",
    "texture-atlas": "^0.2.1",
    "uid": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gnikoloff/hwoa-rang-gl2.git"
  },
  "bugs": {
    "url": "https://github.com/gnikoloff/hwoa-rang-gl2/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Georgi Nikolov",
    "email": "connect@georgi-nikolov.com",
    "url": "https://georgi-nikolov.com"
  },
  "keywords": [
    "webgl",
    "webgl2",
    "canvas",
    "gpu",
    "util",
    "helper"
  ]
}
